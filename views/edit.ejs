<%- include('header', { title: 'Edit Post' }) %>

<div class="flex items-center justify-center py-12 px-4">
    <div class="bg-transparent p-10 rounded-xl shadow-2xl w-full max-w-md border border-zinc-700 transform transition-all duration-300 hover:scale-105">
        <h4 class="text-4xl font-extrabold mb-8 text-center text-white">Edit Your Post</h4>
        <form action="/update/<%= post._id %>" method="POST" class="space-y-6">
            <textarea name="content" placeholder="What's on your mind?" class="w-full p-4 bg-transparent border border-zinc-600 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 text-white placeholder-zinc-400 text-lg" rows="6"><%= post.content %></textarea>
            <button type="submit" value="Update Post" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-5 px-6 rounded-lg cursor-pointer transition duration-200 shadow-lg text-xl uppercase tracking-wider">Update Post</button>
        </form>
    </div>
</div>

<%- include('footer') %>
