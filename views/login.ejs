<%- include('header', { title: 'Login' }) %>

<div class="flex items-center justify-center py-12 px-4">
    <div class="bg-transparent p-10 rounded-xl shadow-2xl w-full max-w-md border border-zinc-700 transform transition-all duration-300 hover:scale-105">
        <h2 class="text-4xl font-extrabold text-center mb-8 text-white">Welcome Back!</h2>
        <form action="/login" method="post" class="space-y-6">
            <input required type="email" name="email" placeholder="Email" class="w-full p-4 rounded-lg bg-transparent border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500 text-white placeholder-zinc-400 text-lg">
            <input required type="password" name="password" placeholder="Password" class="w-full p-4 rounded-lg bg-transparent border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500 text-white placeholder-zinc-400 text-lg">
            <p class="text-sm text-zinc-400 text-center">*all fields are required</p>
            <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-5 px-6 rounded-lg transition duration-300 ease-in-out cursor-pointer shadow-lg text-xl uppercase tracking-wider">Log Back In</button>
        </form>
        <p class="text-center text-zinc-400 mt-6">Don't have an account? <a href="/" class="text-blue-400 hover:text-blue-300 font-semibold transition duration-200">Register here</a></p>
    </div>
</div>

<%- include('footer') %>
