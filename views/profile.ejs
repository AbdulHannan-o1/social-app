<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>
<body>
    <div class="bg-zinc-900 w-full min-h-screen text-white p-4">
        <div class="flex justify-between items-center w-full mb-8">
            <h2 class="text-2xl font-bold">Hello, <%= user.username %></h2>
            <a class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" href="/logout">Logout</a>
        </div>
            <h4 class="text-xl font-semibold mb-4 text-center">You can create a new post</h4>
            <form action="/post" method="POST" class="max-w-xl mx-auto p-6 bg-zinc-800 rounded-lg">
                <textarea name="content" placeholder="What's on your mind?" class="w-full p-3 mb-4 bg-zinc-700 border border-zinc-600 rounded-md resize-none focus:outline-none focus:ring-2 focus:ring-blue-500" rows="5"></textarea>
                <input type="submit" value="Create New Post" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-md cursor-pointer transition duration-200">
            </form>
            <div class="posts">
                <h3>Your posts </h3>
                <div class="postContainer mt-8 max-w-4xl mx-auto px-2 grid grid-cols-1 md:grid-cols-2 gap-4">
                    <% allPosts.reverse().forEach(function(post) { %>
                        <div class="bg-zinc-800 p-4 rounded-lg shadow-md border border-zinc-700">
                            <h4 class="text-lg font-semibold mb-2">@<%= post.user.username %></h4>
                            <p class="text-zinc-300 mb-4"><%= post.content %></p>
                            <small class="mb-2 inline-block"><%= post.likes.length %> Likes </small>
                            <div class="btns flex space-x-4">
                                <a class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md transition duration-200" href="/like/<%= post._id %>">
                                    <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                                </a>
                                <% if (post.user._id.toString() === user._id.toString()) { %>
                                    <a class="bg-zinc-600 hover:bg-zinc-700 text-white font-bold py-2 px-4 rounded-md transition duration-200" href="/edit/<%= post._id %>">Edit</a>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
           
    </div>
</body>
</html>
