<%- include('header', { title: 'Profile' }) %>

    <div class="container mx-auto p-6">
        <div class="bg-transparent p-8 rounded-xl shadow-2xl mb-12 border border-zinc-700">
            <div class="flex items-start gap-4">
                <div class="w-15 h-15 rounded-md">
                    <img class="w-full h-full object-cover" onclick="window.location.href = '/profileUpload'"
                        src="<%= user.profilePic ? '/user/' + user._id + '/profile-pic' : '/images/default-avatar.png' %>"
                        alt="Profile picture">
                </div>
                <h2 class="text-4xl font-extrabold text-white mb-6">Hello, <%= user.username %>!</h2>
            </div>

            <p class="text-zinc-300 text-lg mb-8">Share your thoughts with the world or see what others are up to.</p>

            <h4 class="text-2xl font-semibold mb-6 text-white">Create a New Post</h4>
            <form action="/post" method="POST" class="space-y-6">
                <textarea name="content" placeholder="What's on your mind?"
                    class="w-full p-4 bg-transparent border border-zinc-600 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 text-white placeholder-zinc-400 text-lg"
                    rows="6"></textarea>
                <button type="submit"
                    class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-5 px-6 rounded-lg cursor-pointer transition duration-200 shadow-lg text-xl uppercase tracking-wider">Create
                    New Post</button>
            </form>
        </div>

        <div class="posts">
            <h3 class="text-3xl font-extrabold mb-8 text-white text-center">All Posts</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% allPosts.reverse().forEach(function(post) { %>
                    <div
                        class="bg-transparent p-6 rounded-xl shadow-lg border border-zinc-700 transform transition-all duration-300 hover:scale-105">
                        <h4 class="text-xl font-semibold mb-2 text-blue-400">@<%= post.user.username %>
                        </h4>
                        <p class="text-zinc-300 mb-4 text-base leading-relaxed">
                            <%= post.content %>
                        </p>
                        <small class="mb-4 inline-block text-zinc-400 text-sm">
                            <%= post.likes.length %> Likes
                        </small>
                        <div class="flex space-x-4 mt-4">
                            <a class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 shadow-md"
                                href="/like/<%= post._id %>">
                                <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>
                            </a>
                            <button
                                class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 shadow-md comment-button"
                                data-post-id="<%= post._id %>">
                                Comments
                            </button>

                            <% if (post.user._id.toString()===user._id.toString()) { %>
                                <a class="bg-zinc-600 hover:bg-zinc-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 shadow-md"
                                    href="/edit/<%= post._id %>">Edit</a>
                                <% } %>
                        </div>
                        <div id="comments-<%= post._id %>" class="comments-dropdown mt-4 p-4  rounded-lg hidden">
                            <!-- <h5 class="text-lg font-semibold text-white mb-2">Comments</h5>
                        <div class="comment-item border-b border-zinc-700 pb-2 mb-2">
                            <p class="text-zinc-300"><strong>User1:</strong> Great post!</p>
                        </div>
                        <form action="/update/<%= post._id %>" method="POST" class="space-y-6">
                                <textarea name="content" placeholder="Comment"
                                    class="w-full p-4 bg-transparent border border-zinc-600 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 text-white placeholder-zinc-400 text-lg"
                                    rows="1"></textarea>
                                <button type="submit" value="Update Post"
                                    class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-5 px-6 rounded-lg cursor-pointer transition duration-200 shadow-lg text-xl uppercase tracking-wider">Update
                                    Post</button>
                            </form> -->
                            <ul>
                                <% post.comments.forEach(comment=> { %>
                                    <li>
                                        <strong>
                                            <%= comment.author ? comment.author.username || comment.author.email
                                                : "Unknown" %>:
                                        </strong>
                                        <%= comment.text %>
                                    </li>
                                    <% }) %>
                            </ul>

                            <form action="/post/<%= post._id %>/comment" method="POST">
                                <textarea name="commentText" class="resize-none" placeholder="Write a comment..."
                                    required></textarea>
                                <button type="submit">Add Comment</button>
                            </form>

                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.comment-button').forEach(button => {
                button.addEventListener('click', function () {
                    const postId = this.dataset.postId;
                    const commentsDiv = document.getElementById(`comments-${postId}`);
                    commentsDiv.classList.toggle('hidden'); // Keep hidden for now, will refine with CSS later
                });
            });
        });
    </script>

    <%- include('footer') %>